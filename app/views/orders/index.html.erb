<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%=order.user.name %></td>
        <td><%= order.completed %></td>
        <td><%= link_to 'Order', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Order', new_order_path %>
